doctype html
html
  head
    title #{title}

    script(src="https://code.jquery.com/jquery-3.7.0.min.js" integrity="sha256-2Pmvv0kuTBOenSvLm6bvfBSSHrUJ+3A7x6P5Ebd07/g=" crossorigin="anonymous")
    script(src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js" , integrity="sha384-geWF76RCwLtnZ8qwWowPQNguL3RmwHVBC9FhGdlKrxdiJJigb/j/68SIy3Te4Bkz", crossorigin="anonymous")
    link(rel="stylesheet", href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css", integrity="sha384-9ndCyUaIbzAi2FUVXJi0CjmCapSmO7SnpJef0486qhLnuZ2cdeRhO02iuK6FUUVM", crossorigin="anonymous")
    link(rel="stylesheet", href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.2/css/all.min.css", integrity="sha512-z3gLpd7yknf1YoNbCzqRKc4qyor8gaKU1qmn+CShxbuBusANI9QpRohGBreCFkKxLhei6S9CQXFEbbKuqLg0DA==", crossorigin="anonymous")
    link(rel="stylesheet", href="/stylesheets/style.css")
    link(rel="stylesheet", href="/stylesheets/latin.css")
  body
    .page-container
      nav.navbar.navbar-expand-lg.navbar-light.bg-light
        .container
          a.navbar-brand(href="/")
            img(src="/images/DERBi-PIE-logo.png")
          button.navbar-toggler(type="button", data-bs-toggle="collapse", data-bs-target="#navbarNav", aria-controls="navbarNav", aria-expanded="false", aria-label="Toggle navigation")
            span.navbar-toggler-icon
          .collapse.navbar-collapse#navbarNav
            ul.navbar-nav.me-auto
              if user
                li.nav-item
                  a.nav-link(href="/search") Search
                li.nav-item
                  a.nav-link(href="/about") About
                li.nav-item
                  a.nav-link(href="/instructions") Instructions
                li.nav-item
                  a.nav-link(href="/results") Index
                li.nav-item
                  a.nav-link(href="/download") Download
                if user.username == "admin"

                  li.nav-item
                    a.nav-link(href="/admin") Admin Dashboard
              else
                li.nav-item
                  a.nav-link(href="/construction") Home
                li.nav-item
                  a.nav-link(href="/about") About
                li.nav-item
                  a.nav-link(href="/login") Login

            if user
              ul.navbar-nav
                li.nav-item.d-flex.align-items-center
                  span.text-secondary.me-2
                    i.fas.fa-user.me-1
                    | #{user.username}
                li.nav-item
                  a.btn.btn-outline-secondary.btn-sm(href="/login/logout") Logout

      main.container
        block content

      .divider
      include footer